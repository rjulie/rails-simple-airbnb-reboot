<div class = "container mt-5">

  <div class="row">
    <div class="col">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @flats.count %> flats out of our <%= Flat.count %> on our website.</p>
      <% else %>
        <p>All <%= Flat.count %> flats.</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-3">
        <div class="card my-3" style="width: 18rem;">
          <div class="center-cropped card-img-top"
            style="background-image: url('<%= flat.picture_url %>');">
          </div>
          <div class="card-body" style="height: 7rem;">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></li>
            <li class="list-group-item"><i class="fa-solid fa-person"></i> <%= flat.number_of_guests %></li>
          </ul>
          <div class="card-body">
            <%= link_to "More infos", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat) %>
            <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
